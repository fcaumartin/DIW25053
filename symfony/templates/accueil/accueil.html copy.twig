{% extends 'base.html.twig' %}


{% block body %}

<h1>Accueil</h1>

<div class="container">
    <div class="row">

        {% for disc in discs %}    
            <div class="col-12 col-sm-6 col-md-4 mb-3">
                <div class="card" style="">
                    <img src="{{ asset('/images/' ~ disc.picture ) }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ disc.title }}</h5>
                        <p class="card-text"></p>
                        <a href="/details/{{ disc.id }}" class="btn btn-primary">Détails</a>
                        <a href="{{ path('app_details', { id: disc.id }) }}" class="btn btn-primary">Détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
